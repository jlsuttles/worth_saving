= form_for(@page) do |f|
  - if @page.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@page.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @page.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :permalink
    %br
    = f.text_field :permalink
  .field
    = f.label :meta_title
    %br
    = f.text_field :meta_title
  .field
    = f.label :body
    %br
    = f.text_area :body

  .actions
    = f.submit
